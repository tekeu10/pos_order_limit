<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_session_form_order_count" model="ir.ui.view">
            <field name="name">pos.session.form.order.count</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="pending_orders_count" readonly="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_pos_session_tree_order_count" model="ir.ui.view">
            <field name="name">pos.session.tree.order.count</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="pending_orders_count"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>