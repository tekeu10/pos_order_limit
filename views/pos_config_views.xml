<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_order_limit" model="ir.ui.view">
        <field name="name">pos.config.form.order.limit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt16 o_settings_container'][2]" position="after">
                <div class="row mt16 o_settings_container" invisible="context.get('pos_config_create_mode', False)">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Limitation des commandes en attente</span>
                            <div class="text-muted mb16">
                                Activez cette option pour limiter le nombre de commandes en attente dans le POS.
                            </div>
                            <div class="content-group">
                                <div class="row">
                                    <div class="col-6">
                                        <field name="enable_pending_order_limit" widget="boolean_toggle"/>
                                        <label for="enable_pending_order_limit"/>
                                    </div>
                                    <div class="col-6" attrs="{'invisible': [('enable_pending_order_limit','=',False)]}">
                                        <field name="pending_orders_limit"/>
                                        <label for="pending_orders_limit"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>