<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve" owl="1">
    
    <t t-name="pos_order_limit.OrderLimitPopup" owl="1">
        <div class="popup popup-confirm order-limit-popup">
            <header class="title drag-handle">
                <i class="fa fa-exclamation-triangle text-warning"/> 
                <t t-esc="props.title" />
            </header>
            <main class="body">
                <div class="order-limit-message text-center">
                    <p t-esc="props.body"/>
                    <small class="text-muted d-block mt-2">
                        Please complete or delete some orders before creating new ones.
                    </small>
                </div>
            </main>
            <footer class="footer">
                <div class="button confirm" t-on-click="confirm">
                    <t t-esc="props.confirmText or 'Ok'" />
                </div>
            </footer>
        </div>
    </t>

</templates>